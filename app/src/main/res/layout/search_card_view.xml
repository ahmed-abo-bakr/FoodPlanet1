<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/search_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ahmed abo bakr"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/search_pic"
            android:layout_toRightOf="@+id/search_pic"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/search_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a7med007"
            android:textColor="@color/smooth_black"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/search_pic"
            android:layout_toRightOf="@+id/search_pic"
            android:layout_below="@+id/search_name"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/search_follow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/btn_foushia"
            android:text="Follow"
            android:textColor="@color/whit"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/smooth_grey"
        android:layout_marginTop="63dp" />

</androidx.cardview.widget.CardView>