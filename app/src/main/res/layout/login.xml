<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="#fff"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingEnd="@dimen/login"
        android:paddingLeft="16dp"
        android:paddingRight="@dimen/login"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_person_foshia_24dp"
        android:drawableLeft="@drawable/ic_person_foshia_24dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_lock_foshia_24dp"
        android:background="#fff"
        android:backgroundTint="#fff"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingEnd="@dimen/login"
        android:paddingLeft="8dp"
        android:paddingRight="@dimen/login"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login_"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#FFF595B5"
        android:gravity="center"
        android:text="login"
        android:fontFamily="@font/carter_one"
        android:textColor="#fff"
        android:textSize="16sp" />


    <Button
        android:id="@+id/forgetPassword"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="forget password ? "
        android:fontFamily="@font/carter_one"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textColor="#fff"
        android:textSize="16sp" />
